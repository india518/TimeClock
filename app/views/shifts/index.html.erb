<% content_for :title do %>
	Summary
<% end %>

<div class="navbar">
  <div class="navbar-inner">
    <ul class="nav pull-right">
    	<li><%= link_to "Summary" %></li>
      <li class="divider-vertical"></li>
      <li><%= link_to "Clock In", clock_in_url %></li>
      <li class="divider-vertical"></li>
      <li><%= link_to "Clock Out", clock_out_url %></li>
    </ul>
  </div>
</div>

<%= simple_form_for @shift, :url => summary_url do |f| %>
	<%= f.input :user_id, :collection => @users, :prompt => 'Show all' %>
	<%= f.submit %>
<% end %>
<!-- Note that any (or ALL!) form fields can be submitted empty! -->
<!-- add in to/from date ranges -->

<table class="table table-bordered table-condensed margin10">
	<thead>
		<tr>
			<th>Name</th>
			<th>Date</th>
			<th>Clock In</th>
			<th>Clock Out</th>
			<th>Total Hours</th>
			<th>Note</th>
		</tr>
	</thead>
	<tbody>
		<% @shifts.each do |shift| %>
			<tr>
				<td><%= shift.user.name %></td>
				<td><%= shift.clock_in_date %></td>
				<td><%= shift.clock_in_time %></td>
				<td><%= shift.clock_out_time %></td>
				<td><%= sprintf "%.2f", shift.time_clocked %></td>
				<td><%= shift.note %></td>
			</tr>
		<% end %>
	</tbody>
</table>